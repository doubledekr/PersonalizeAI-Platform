<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="python"
                  arguments="src/main.py"
                  stdoutLogEnabled="true"
                  stdoutLogFile="D:\home\LogFiles\python.log"
                  startupTimeLimit="60"
                  requestTimeout="00:04:00">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
        <environmentVariable name="FLASK_ENV" value="production" />
        <environmentVariable name="WEBSITES_PORT" value="8000" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- Enable CORS for all origins -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
      </customHeaders>
    </httpProtocol>
    
    <!-- URL Rewrite rules for API routing -->
    <rewrite>
      <rules>
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/.*" />
          <action type="None" />
        </rule>
        <rule name="Health Check" stopProcessing="true">
          <match url="^health$" />
          <action type="None" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Security settings -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" />
      </requestFiltering>
    </security>
    
  </system.webServer>
  
  <!-- Application settings -->
  <appSettings>
    <add key="PYTHONPATH" value="D:\home\site\wwwroot" />
    <add key="FLASK_ENV" value="production" />
    <add key="WEBSITES_PORT" value="8000" />
  </appSettings>
  
</configuration>

